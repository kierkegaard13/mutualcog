	<div class="mobile_global_requests" style="display:none;margin:10px 15px;">
		{% for request in user.globalNotifications %}
			{{request.message | raw}}
		{% else %}
			<div class='request_text'>No global requests</div>
		{% endfor %}
	</div>
</div>
